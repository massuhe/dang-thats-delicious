mixin review(review = {})
  .review
    .review__header
      .review__author
        img.avatar(src=review.author.gravatar)
        span= review.author.name
      .review__stars(title=`Rated ${review.stars} out of 5 stars`)
        = '★'.repeat(review.stars)
        = '☆'.repeat(5 - review.stars)
      time.review__time(datetime=review.created)= h.moment(review.created).fromNow()
    .review__body
      p= review.text